{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": 1,
        "semi": 1,
        "no-empty": 0,
        "no-irregular-whitespace": 1,
        "no-unused-vars": 1,
        "prefer-destructuring": 1,
        "import/prefer-default-export": 1,
        "react/jsx-max-props-per-line": [
            "warn",
            {
              "maximum": 1,
              "when": "always"
            }
          ],
          "react/jsx-tag-spacing": [
            "warn",
            {
              "closingSlash": "never",
              "beforeSelfClosing": "always",
              "afterOpening": "never",
              "beforeClosing": "allow"
            }
          ]
    }
}
